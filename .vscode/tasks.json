{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "Build Release (Complete)",
            "command": "powershell",
            "args": [
                "-NoProfile",
                "-ExecutionPolicy",
                "Bypass",
                "-File",
                "${workspaceFolder}/.vscode/build_release_helper.ps1"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "detail": "Build Release + copy runtime DLLs (ready for F5 debug)."
        },
        {
            "type": "shell",
            "label": "Run Release",
            "command": "powershell",
            "args": [
                "-NoProfile",
                "-ExecutionPolicy",
                "Bypass",
                "-Command",
                "& '${workspaceFolder}/build/bin/Release/ParticleSimulation.exe'"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "dependsOn": "Build Release (Complete)",
            "detail": "Run the application without attaching a debugger."
        }
    ]
}