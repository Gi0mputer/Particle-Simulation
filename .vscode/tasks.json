{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "CMake: Configure",
            "command": "cmake",
            "args": [
                "-B", "${workspaceFolder}/build",
                "-S", "${workspaceFolder}",
                "-G", "Visual Studio 17 2022",
                "-A", "x64",
                "-DCMAKE_PREFIX_PATH=${workspaceFolder}/vcpkg_installed/x64-windows"
            ],
            "problemMatcher": [],
            "detail": "Configura il progetto con CMake (Visual Studio 17 2022, x64)."
        },
        {
            "type": "shell",
            "label": "CMake: Build Release",
            "command": "cmake",
            "args": [
                "--build", "${workspaceFolder}/build",
                "--config", "Release"
            ],
            "dependsOn": "CMake: Configure",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "detail": "Compila il progetto in Release."
        },
        {
            "type": "shell",
            "label": "Copy DLLs",
            "command": "powershell",
            "args": [
                "-Command",
                "Copy-Item '${workspaceFolder}/vcpkg_installed/x64-windows/bin/*.dll' '${workspaceFolder}/build/bin/Release/' -Force"
            ],
            "problemMatcher": [],
            "detail": "Copia le DLL runtime nella directory di output."
        }
    ]
}
}
